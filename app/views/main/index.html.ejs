<div class="row">
  <div class="col-lg-12">
    <form action="/" method="post" role="form" class="form-horizontal" id="search">
      <div class="form-group">
        <div class="col-sm-10">
          <input type="text" name="term" class="form-control"
                 placeholder="Please specify your search term" />
        </div>
        <button class="btn btn-primary" type="submit">
          <span class="glyphicon glyphicon-search"></span>
          Search
        </button>
      </div>
    </form>
  </div><!-- /.col-lg-6 -->
</div><!-- /.row -->

<div class="row search-results">
  <div class="col-lg-12">

    <% if (this.results) { %>
    <h5 class="text-info">Search Results &hellip;</h5>

    <table class="table table-striped table-hover">
      <tbody>
        <% for(var i = 0; i < this.results.length; i++) { %>
           <tr>
             <td><%= this.results[i].title %></td>
             <td><span class="badge pull-right">Source</span></td>
           </tr>
           <% } %>
      </tbody>
    </table>
    <% } else { %>
    <span class="text-muted">Your search results will be displayed here.</span>
    <% } %>

  </div>
</div>
